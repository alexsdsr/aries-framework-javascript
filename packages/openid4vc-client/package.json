{
  "name": "@aries-framework/openid4vc-client",
  "main": "build/index",
  "types": "build/index",
  "version": "0.4.0",
  "files": [
    "build"
  ],
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/hyperledger/aries-framework-javascript/tree/main/packages/openid4vc-client",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperledger/aries-framework-javascript",
    "directory": "packages/openid4vc-client"
  },
  "scripts": {
    "build": "yarn run clean && yarn run compile",
    "clean": "rimraf ./build",
    "compile": "tsc -p tsconfig.build.json",
    "prepublishOnly": "yarn run build",
    "test": "jest",
    "mattr-auth-url": "jest tests/mattr_auth_url.test.ts",
    "mattr-issue-vc": "echo -n 'Authorization Code: ' && read -r auth_code && echo -n 'Code verifier: ' && read -r code_verifier && AUTHCODE=$auth_code CODEVERIF=$code_verifier jest tests/mattr_issue_vc.test.ts",
    "mattr-demo": "yarn run mattr-auth-url && yarn run mattr-issue-vc"
  },
  "dependencies": {
    "@aries-framework/core": "0.4.0",
    "@sphereon/oid4vci-client": "0.7.0",
    "@sphereon/oid4vci-common": "0.7.0",
    "@stablelib/random": "^1.0.2"
  },
  "devDependencies": {
    "@aries-framework/node": "0.4.0",
    "nock": "^13.3.0",
    "rimraf": "^4.4.0",
    "typescript": "~4.9.5"
  }
}
